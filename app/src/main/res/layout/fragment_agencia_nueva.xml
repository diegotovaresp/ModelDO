<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="doagency.com.modeldo.AgenciaNuevaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backagenc">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvAgenciaNuevaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:gravity="center_horizontal"
        android:text="Agregar Nueva Agencia"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvAgenciaNuevaTitulo"
        android:layout_below="@+id/tvAgenciaNuevaTitulo"
        android:layout_marginTop="17dp"
        android:text="Nombre Agencia"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etnombreagencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="80"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etnombreagencia"
        android:layout_below="@+id/etnombreagencia"
        android:layout_marginTop="13dp"
        android:text="Numero IdentificaciÃ³n tributaria (CUIT, RUC, NIT, RIF, ETC)  "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etrucagencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="12"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/tvEveAgencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/etrucagencia"
        android:layout_below="@+id/etrucagencia"
        android:text="Pais"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerpais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvEveAgencia"
            android:layout_below="@+id/tvEveAgencia" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerpais"
        android:layout_below="@+id/spinnerpais"
        android:layout_marginTop="15dp"
        android:text="Telefono"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ettelefonoagencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ettelefonoagencia"
        android:layout_below="@+id/ettelefonoagencia"
        android:text="Direccion"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etdireccionagencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btnagragencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etdireccionagencia"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/roundedbutton"
            android:text="Agregar" />
</LinearLayout>
    </RelativeLayout>

</FrameLayout>
